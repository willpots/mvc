<div class="login-page row">
	<div class="span12">
		<h2>Log In</h2>
		<%= form_tag("/check", :method => "post") do %>
		<% if @error %>
		<p><%= @error %></p>
		<% end %>
		<div class="control-group ">
			<div class="controls">
				<input type="text" id="username" name="username" placeholder="Email">
				<div class="help-inline">Email is Invalid</div>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<input type="password" id="password" name="password" placeholder="Password">
				<div class="help-inline">Incorrect/Invalid Password</div>
			</div>
		</div>
		<%= submit_tag("Login") %>
		<% end %>
