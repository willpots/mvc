	<div class="span12">
		<%= form_for @group, :url => { :action => "update_group" }, :html => {:class => "nifty_form", :multipart => true} do |f| %>
			<h2>Edit <%= f.text_field :name %></h2>
 <% if @group.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@group.errors.count, "error") %> prohibited this page from being saved:</h5>

